# Exemplo de variáveis de ambiente (NÃO COMMITAR .env reais)

# ID do arquivo no Google Drive (Google Sheets ou Excel .xlsx)
GOOGLE_SHEETS_ID=<YOUR_DRIVE_FILE_ID>
# Caminho ou mecanismo de injeção para JSON da Service Account (mantenha fora do repo ou como secret)
GOOGLE_APPLICATION_CREDENTIALS=config/service-account.json

# Configurações da API
FLASK_ENV=development
FLASK_DEBUG=True
PORT=5001

# CORS (para desenvolvimento local)
CORS_ORIGINS=http://localhost:8080,http://127.0.0.1:8080,http://localhost:3000

# Configurações de Cache (opcional)
CACHE_TIMEOUT=300
